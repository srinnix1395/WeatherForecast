<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    tools:context=".activity.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/layout_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/TextViewHighStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/TextViewLowStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_location"
                    android:textColor="@color/colorGray"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_1"
                style="@style/TextViewHighStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/position"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imv_renew"
                android:layout_width="@dimen/defaultSize"
                android:layout_height="@dimen/defaultSize"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/imv_more"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_autorenew_white_24dp" />

            <ImageView
                android:id="@+id/imv_more"
                android:layout_width="@dimen/defaultSize"
                android:layout_height="@dimen/defaultSize"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/ic_dots_vertical_white_24dp" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <com.qtd.weatherforecast.custom.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/indicator"
        android:layout_below="@+id/toolbar_home"
        android:layout_marginTop="10dp" />

    <com.example.pageindicator.IconCirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        app:selectedResource="@drawable/ic_compass"
        app:unselectedResource="@drawable/ic_compass" />
</RelativeLayout>
