<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                tools:background="#000">

    <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imv_icon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_temp"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="72sp"/>

            <TextView
                    android:id="@+id/tv_weather"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_temp"
                    android:layout_centerHorizontal="true"
                    android:textSize="28sp"/>

            <RelativeLayout
                    android:id="@+id/layout_humid"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_weather"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible">

                <TextView
                        android:id="@+id/tv1"
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="@string/humid"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/tv_humid"
                        style="@style/TextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:lines="1"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/tv2"
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="5dp"
                        android:lines="1"
                        android:text="@string/wind"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/tv_wind"
                        style="@style/TextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_humid"
                        android:layout_marginTop="5dp"
                        android:lines="1"
                        android:textSize="18sp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/layout_UV"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_weather"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible">

                <TextView
                        android:id="@+id/tv3"
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="@string/feels_like"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/tv_feelslike"
                        style="@style/TextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:lines="1"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/tv4"
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv3"
                        android:layout_marginTop="5dp"
                        android:lines="1"
                        android:text="@string/UV"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/tv_uv"
                        style="@style/TextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_feelslike"
                        android:layout_marginTop="5dp"
                        android:lines="1"
                        android:textSize="18sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


    <TextView
            android:id="@+id/tv_update"
            style="@style/TextViewLowStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>
</RelativeLayout>